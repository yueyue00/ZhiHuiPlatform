<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:id="@+id/sch_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/bar_gray"
        >
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/sch_end_tv_starTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间：08:40"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:paddingLeft="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:textColor="@color/sch_text_gray"
            />
        <ImageView
            android:id="@+id/sch_end_dotL"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/bg_graydot_dis"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/sch_end_tv_starTime"/>
        
    </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
       <ImageView
           android:id="@+id/sch_end_dotR"
           android:layout_width="10dp"
           android:layout_height="10dp"
           android:src="@drawable/bg_graydot_dis"
           android:layout_marginLeft="70dp"
           />
            <TextView
                android:id="@+id/sch_end_tv_endTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="结束时间：08:50"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textColor="@color/sch_text_gray"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/sch_content_ll"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >
      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:gravity="center_vertical"
          android:paddingLeft="15dp"
          android:paddingRight="15dp"
          >
       <TextView
           android:id="@+id/sch_item_tv_title"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="18sp"
           android:text="日程名称：留影"
           android:textColor="@color/sch_text_gray"
           />
          <TextView
              android:id="@+id/sch_item_tv_location"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="18sp"
              android:layout_marginTop="5dp"
              android:text="日程地点：华夏国籍大酒店一流自助餐厅"
              android:textColor="@color/sch_text_gray"
              />

      </LinearLayout>
        <View
            android:id="@+id/sch_item_view1"
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="@color/sch_line_color"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
         <TextView
             android:id="@+id/sch_item_tv_zbf"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:text="主办方：省卫计委"
             android:gravity="center"
             android:paddingLeft="10dp"
             android:paddingRight="10dp"
             android:textColor="@color/sch_text_gray"
             />
        </LinearLayout>
        <View
            android:id="@+id/sch_item_view2"
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="@color/sch_line_color"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >
         <TextView
             android:id="@+id/sch_item_tv_cbf"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:text="承办方：省卫计委"
             android:textColor="@color/sch_text_gray"
             />
            <TextView
                android:id="@+id/sch_item_tv_cbfPerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="承办方负责人：花园一"
                android:textColor="@color/sch_text_gray"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>