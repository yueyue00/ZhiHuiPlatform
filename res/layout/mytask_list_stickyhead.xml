        android:gravity="center_vertical"
        android:paddingBottom="3dp"
        android:paddingLeft="25dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:text="rlxxvbnm,ertyl;zdfbnm,cvbnmzxcvbnm,.zxcnm,.zghzxcm,sdhjkl"
