<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"

    >
    <!-- android:background="#111821" -->
    <ImageView
        android:id="@+id/li_iv_progressState"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:src="@drawable/big_home_icon_end_nor"
        android:scaleType="fitXY"
        />
    <ImageView
        android:id="@+id/li_iv_over_arrow"
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:src="@drawable/big_home_icon_endaow_nor"
        />
    <TextView
        android:id="@+id/li_tv_titile"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:text="开幕式"
        android:textSize="30sp"
        android:textColor="@color/text_dark_blue"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        />
    <!-- android:background="@drawable/home_now_progress" -->
    <TextView
        android:id="@+id/li_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="09:00"
        android:layout_marginTop="10dp"
        />

</LinearLayout>