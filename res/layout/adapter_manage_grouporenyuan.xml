<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_importguestlv_item" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/manage_lvitem_left"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/manage_group_icon"
            android:layout_width="@dimen/manage_lv_icon_height"
            android:layout_height="@dimen/manage_lv_icon_height"
            android:layout_marginTop="@dimen/manage_lv_icon_top"
            android:layout_marginBottom="@dimen/manage_lv_icon_top"
            android:background="@drawable/icon" />

        <TextView
            android:id="@+id/manage_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/manage_lvitem_text_left"
            android:textSize="@dimen/hotel_lvitem_tvsize"
            android:text="贵宾组1" />
    </LinearLayout>

</RelativeLayout>